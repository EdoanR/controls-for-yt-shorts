{
    "name": "__MSG_AppName__",
    "version": "1.0",
    "manifest_version": 3,
    "description": "__MSG_AppDescription__",
    "permissions": ["tabs", "storage"],
    "default_locale": "en",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "css": ["css/content_script.css"],
        "js": ["libs/mutation_summary.js", "libs/fluidplayer.min.js", "js/observer.js", "js/content_script.js"]
    }],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/icons/normal/icon-16.png",
            "48": "images/icons/normal/icon-48.png",
            "32": "images/icons/normal/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icons/normal/icon-16.png",
        "48": "images/icons/normal/icon-48.png",
        "128": "images/icons/normal/icon-128.png"
    }
}